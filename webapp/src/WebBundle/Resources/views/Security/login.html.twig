{% extends '::base.html.twig' %}
{% set page_header='Вход в систему' %}

{%  block content %}


    <div class="row">
        <div class="col-md-6">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|replace({'Invalid credentials.' : 'Неверное имя пользователя или пароль.'}) }}</div>
            {% endif %}
            <img id="img-load" src="{{ asset('assets/img/ajax-loader.gif') }}" alt="Загрузка..."/>
            <form role="form" action="{{ path('login_check') }}" data-apiurl="{{ apiurl }}" method="post">
                <div class="form-group">
                    <label for="username">Имя пользователя</label>
                    <input type="text" class="form-control" name="_username" value="{{ last_username }}" id="username" autofocus placeholder="Имя пользователя">
                </div>
                <div class="form-group">
                    <label for="password">Пароль</label>
                    <input type="password" class="form-control" name="_password" id="password" placeholder="Пароль">
                </div>
                <button type="submit" id="submit" class="btn btn-primary btn-block">Войти</button>
            </form>
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{  asset('assets/js/login.js')}}"></script>
{% endblock %}