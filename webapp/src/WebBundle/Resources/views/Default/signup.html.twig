{% extends '::base.html.twig' %}
{% set page_header='Регистрация' %}

{%  block content %}


    <div class="row">
        <div class="col-md-6">

            <form role="form" data-apiurl="{{ apiurl }}" data-successurl="{{ path('login') }}">
                <div class="form-group">
                    <label for="username">Имя пользователя</label>
                    <input type="text" class="form-control" name="username" id="username"  placeholder="Имя пользователя">
                </div>
                <div class="form-group">
                    <label for="password">Пароль</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Пароль">
                </div>
                <div class="form-group">
                    <label for="password2">Подтверждение пароля</label>
                    <input type="password" class="form-control" id="password2" placeholder="Подтверждение пароля">
                </div>
                <button id="submit" class="btn btn-primary btn-block">Зарегистрироваться</button>
            </form>
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{  asset('assets/js/signup.js')}}"></script>
{% endblock %}